
<!-- Template below -->

  <div class="container">
    <div class="row">
      <div class="col-lg-10 col-xl-9 mx-auto">
        <div class="card card-signin flex-row my-5">
          <div class="card-img-left d-none d-md-flex">
             <!-- Background image for card set in CSS! -->
          </div>
          <div class="card-body">
            <h1 class="card-title text-center">Login</h1>
            <form class="form-signin new-search-form" action="/login" method="POST" id="login-form">


              <div class="form-label-group">
                <input type="text" name="username" id="username" class="form-control" placeholder="Username" required autofocus>
                <label for="username">Username</label>
              </div>

             
              
              

              <div class="form-label-group">
                <input type="password" name="password" id="password" class="form-control" placeholder="Password" required>
                <label for="password">Password</label>
              </div>
              
              
                {{#if hasError}}
                    <div class="form-label-group error">{{error}}</div>
                {{/if}}
                
              <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Login</button>
              <hr class="my-4">
              
            </form>
            <a class="d-block text-center mt-2 small" href="/signup">Sign up</a>
            
          </div>
        </div>
      </div>
    </div>
  </div>


<script src="/public/css/bootstrap.bundle.min.js"></script>
<script src="/public/css/jquery.slim.min.js"></script>
